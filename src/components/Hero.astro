---
import ChevronRight from "lucide-astro/ChevronRight";
import House from "lucide-astro/House";
import Star from "lucide-astro/Star";
import Redo from "lucide-astro/Redo";
---

<div class="bg-white">
  <div class="relative isolate">
    <svg
      class="absolute inset-0 -z-10 size-full mask-[radial-gradient(100%_100%_at_top_right,white,transparent)] stroke-gray-200"
      aria-hidden="true"
    >
      <defs>
        <pattern
          id="83fd4e5a-9d52-42fc-97b6-718e5d7ee527"
          width="200"
          height="200"
          x="50%"
          y="-1"
          patternUnits="userSpaceOnUse"
        >
          <path d="M100 200V.5M.5 .5H200" fill="none"></path>
        </pattern>
      </defs>
      <svg x="50%" y="-1" class="overflow-visible fill-gray-50">
        <path
          d="M-100.5 0h201v201h-201Z M699.5 0h201v201h-201Z M499.5 400h201v201h-201Z M-300.5 600h201v201h-201Z"
          stroke-width="0"></path>
      </svg>
      <rect
        width="100%"
        height="100%"
        stroke-width="0"
        fill="url(#83fd4e5a-9d52-42fc-97b6-718e5d7ee527)"></rect>
    </svg>
    <div class="py-24 sm:py-32 lg:flex lg:items-center lg:gap-x-10 lg:py-40">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:flex-auto relative">
        <div class="flex">
          <div
            class="relative flex items-center gap-x-4 rounded-full bg-white px-4 py-1 text-sm/6 text-gray-600 ring-1 ring-gray-900/10 hover:ring-gray-900/20"
          >
            <span class="font-semibold text-indigo-600">Battery Rebates</span>
            <span class="h-4 w-px bg-gray-900/10" aria-hidden="true"></span>
            <a href="#" class="flex items-center gap-x-1">
              Now Live!
              <ChevronRight class="size-4 text-gray-400" />
            </a>
          </div>
        </div>
        <h1
          class="mt-10 text-5xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-7xl"
        >
          Don't miss out: Save Thousands on Solar Batteries Now!
        </h1>
        <p
          class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
        >
          The Australian Government's new program cuts battery costs by up to
          30%â€”saving you ~$5,000 on a 15 kwh system. Store solar power, slash
          your bills, and join thousands of Aussies already upgrading their
          homes. Compare, save, and power your home smarter!
        </p>
        <div class="mt-10 flex items-center gap-x-6">
          <div>
            <label
              for="postcode"
              class="block text-sm/6 font-semibold text-gray-900"
              >Postcode</label
            >
            <form class="relative flex items-center gap-x-2">
              <input
                type="text"
                name="postcode"
                id="postcode"
                required
                placeholder="Your postcode"
                class="block rounded-md shrink min-w-0 w-full bg-white pl-10 pr-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
              />
              <House
                class="size-4 absolute left-3 top-1/2 -translate-y-1/2 text-gray-600"
              />
              <button
                class="rounded-md whitespace-nowrap bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold flex items-center gap-x-1 text-white shadow-xs hover:bg-indigo-500 cursor-pointer focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
              >
                Compare Quotes <ChevronRight class="size-4" />
              </button>
            </form>
          </div>
        </div>
        <div class="flex flex-col sm:flex-row sm:items-center gap-2 mt-4">
          <div class="flex items-center gap-x-2">
            <Star class="size-5 fill-yellow-500 text-yellow-500" />
            <Star class="size-5 fill-yellow-500 text-yellow-500" />
            <Star class="size-5 fill-yellow-500 text-yellow-500" />
            <Star class="size-5 fill-yellow-500 text-yellow-500" />
            <Star class="size-5 fill-yellow-500 text-yellow-500" />
          </div>
          <span
            class="hidden sm:block h-6 w-px bg-gray-900/10"
            aria-hidden="true"></span>
          <p class="text-sm text-gray-400">
            <strong class="font-semibold text-gray-900">Benefit from</strong> over
            <span class="text-indigo-600 font-semibold"
              >15,047 solar customer reviews</span
            >
          </p>
        </div>
        <Redo
          class="absolute right-0 xl:right-20 hidden sm:block bottom-10 size-28 text-indigo-600 rotate-140"
          stroke-width="1.5"
        />
      </div>
      <div
        class="mt-16
                  sm:mt-24
                  lg:mt-0
                  lg:shrink-0
                  lg:grow"
      >
        <svg
          viewBox="0 0 366 729"
          role="img"
          class="mx-auto w-91.5 max-w-full drop-shadow-xl"
        >
          <title>App screenshot</title>
          <defs>
            <clipPath id="2ade4387-9c63-4fc4-b754-10e687a0d332">
              <rect width="316" height="684" rx="36"></rect>
            </clipPath>
          </defs>
          <path
            fill="#4B5563"
            d="M363.315 64.213C363.315 22.99 341.312 1 300.092 1H66.751C25.53 1 3.528 22.99 3.528 64.213v44.68l-.857.143A2 2 0 0 0 1 111.009v24.611a2 2 0 0 0 1.671 1.973l.95.158a2.26 2.26 0 0 1-.093.236v26.173c.212.1.398.296.541.643l-1.398.233A2 2 0 0 0 1 167.009v47.611a2 2 0 0 0 1.671 1.973l1.368.228c-.139.319-.314.533-.511.653v16.637c.221.104.414.313.56.689l-1.417.236A2 2 0 0 0 1 237.009v47.611a2 2 0 0 0 1.671 1.973l1.347.225c-.135.294-.302.493-.49.607v377.681c0 41.213 22 63.208 63.223 63.208h95.074c.947-.504 2.717-.843 4.745-.843l.141.001h.194l.086-.001 33.704.005c1.849.043 3.442.37 4.323.838h95.074c41.222 0 63.223-21.999 63.223-63.212v-394.63c-.259-.275-.48-.796-.63-1.47l-.011-.133 1.655-.276A2 2 0 0 0 366 266.62v-77.611a2 2 0 0 0-1.671-1.973l-1.712-.285c.148-.839.396-1.491.698-1.811V64.213Z"
          ></path>
          <path
            fill="#343E4E"
            d="M16 59c0-23.748 19.252-43 43-43h246c23.748 0 43 19.252 43 43v615c0 23.196-18.804 42-42 42H58c-23.196 0-42-18.804-42-42V59Z"
          ></path>
          <foreignObject
            width="316"
            height="684"
            transform="translate(24 24)"
            clip-path="url(#2ade4387-9c63-4fc4-b754-10e687a0d332)"
          >
            <img
              src="https://tailwindcss.com/plus-assets/img/component-images/mobile-app-screenshot.png"
              alt=""
            />
          </foreignObject>
        </svg>
      </div>
    </div>
  </div>
</div>
